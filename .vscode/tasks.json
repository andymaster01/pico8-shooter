{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "powershell",
    "isShellCommand": true,
    "args": [
        "-ExecutionPolicy",
        "Unrestricted",
        "-NoProfile",
        "-File",
        "${cwd}/test.ps1"
    ],
    "taskSelector": "-task ",
    "showOutput": "always",
     "tasks": [
        {
            "taskName": "build",
            "showOutput": "always",
            "args": [
                "build"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "run",
            "showOutput": "always",
            "args": [
                "run"
            ]
        }
    ]
}